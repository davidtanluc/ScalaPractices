package project1
/* This the imperative version of the wordcout */

object WordCount extends App{
  /* Input */
  print("Please enter your input : " )
  val line = Console.readLine
  println("You just typed: " + line)
  var words = line.split(" ")
  scala.util.Sorting.quickSort(words)  /*sort*/

  /* declaration*/
  var count=0
  var thisWord = "";
  var nextWord = "";
  val wordMap = scala.collection.mutable.Map[String,Int]()

  /* algorithm */
  for(i<-0 to words.length-1){
    thisWord=words(i)
    if(i<(words.length-1))nextWord=words(i+1)
    count+=1
    if(!thisWord.equals(nextWord)) {
      wordMap += thisWord->count/*Add this*/
      count=0/*reset*/
    }
  }/*for*/

  /*handling the last word of list count*/
  nextWord = words(words.length-1);
  if (!thisWord.equals(nextWord)) {count=1}

  if(words.length==1){count=1}/*account for 1*/
  wordMap(thisWord) = count/*Add this*/
  /*end algorithm*/

  /*displays*/
  println(wordMap)

}/*WordCount*/